@model Mvc.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <div class="row text-center">
        <h1 class="col">Edit @Model.Client.Name's Appointment</h1>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Client.Id" />
                <input type="hidden" asp-for="Client.Name" />
                <div class="form-group">
                    <label asp-for="ClientId" class="control-label"></label>
                    <input asp-for="ClientId" class="form-control" readonly />
                    <span asp-validation-for="ClientId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Client.PhoneNumber" class="control-label"></label>
                    <input asp-for="Client.PhoneNumber" class="form-control" readonly />
                    <span asp-validation-for="Client.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="control-label"></label>
                    <input asp-for="Date" class="form-control"/>
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DesiredService" class="control-label"></label>
                    <textarea asp-for="DesiredService" class="form-control"></textarea>
                    <span asp-validation-for="DesiredService" class="text-danger"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Save" class="btn btn-primary w-100 m-0 mt-2 mb-2" />
                </div>
            </form>
        </div>
    </div>

    <div class="row text-center">
        <a asp-action="List" class="col">Back to List</a>
    </div>
</div>



